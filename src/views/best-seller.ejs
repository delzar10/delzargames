<div class="container padding-top-10">
  <h2>Best Games</h2>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">

     <% var index = 1; %>
     <% bestArticles.forEach( article => {  %>
          <li data-target="#myCarousel"
              data-slide-to="<%=index%>"
              <% if (index === 1) {  %> class="active"<% } %>
              ></li>
        <% index += 1; %>
     <% }); %>
    </ol>
<!--src="http://zelda.com/breath-of-the-wild/assets/icons/BOTW-Share_icon.jpg"-->
    <!-- Wrapper for slides -->

    <% var index = 1; %>
    <class="item" class="carousel-inner">
      <% bestArticles.forEach(article =>{ %>
        <div class="item flexbox
        <% if (index === 1) {  %> active <% } %>
        " >
            <img src="<%=article.imgFullPath%>" alt="<%=article.title%>" width="304" height="236">
        </div>
        <% index += 1; %>
      <% }); %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
